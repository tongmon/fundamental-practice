<!-- WindowStyle이 None인 경우 곡 AllowsTransparency는 True여야 한다. -->
<Window x:Class="Word.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Welcome, friend!" FontFamily="{StaticResource LatoItalic}" FontSize="40"/>
        <TextBlock Text="Welcome, friend!" FontFamily="{StaticResource LatoRegular}" FontSize="40"/>
        <Button Content="test button"/>
    </StackPanel>
</Window>
